<?xml version="1.0" encoding="UTF-8"?>
<fizzy version="0.4">
    <application>
        <title>Fizzy</title>
        <env>development</env>
        <adminSwitch>admin</adminSwitch>
    </application>
    <router>
        <defaultController>default</defaultController>
        <defaultAction>default</defaultAction>
    </router>
    <storage>
        <driver>SQLite</driver>
        <dsn>sqlite:/path/to/sqlite/database.sq3</dsn>
    </storage>
    <paths>
        <controller></controller>
        <library></library>
        <model></model>
        <public></public>
        <view></view>
    </paths>
</fizzy>
